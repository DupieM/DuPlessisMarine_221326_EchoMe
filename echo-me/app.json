{
  "expo": {
    "name": "echo-me",
    "slug": "echo-me",
    "version": "1.0.0",
    "orientation": "portrait",
    "splash": {
      "image": "./assets/images/Splash_Screen.png",
      "resizeMode": "cover",
      "backgroundColor": "#1A1A1A"
    },
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "splash": {
        "image": "./assets/images/Splash_Screen.png",
        "backgroundColor": "#1A1A1A",
        "resizeMode": "cover" 
      },
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
